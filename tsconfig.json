{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "@types/jest"
    ],
    "typeRoots": [
      "src/custom-typings",
      "./node_modules/@types"
    ],
  },
  "include": [
    "src/**/*",
    "src/custom-typings"
  ],
  "ts-node": {
    "transpileOnly": true
  },
  "exclude": [
    "src/**/**/*.spec.ts"
  ]
}